datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Example model, adjust as needed
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  role     String
}

enum Role {
  USER
  ADMIN
}